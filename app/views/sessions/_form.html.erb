
<%= simple_form_for :session, url: session_path do |form| %>
  <div class="form-group">
    <%= form.input :email, type: 'email' %>
  </div>

  <div class="form-group">
    <%= form.input :password %>
  </div>

  <div class="form-group">
    <%= form.button :submit%>
  </div>

  <div class="other-links">
    <%= link_to t("sessions.form.forgot_password"), new_password_path %>
  </div>
<% end %>
